@model Blog
@{
    Layout = "_LayoutAkun";
}

<h4 class="text-center">Create Data Tb_Blog</h4>
<hr /> 
<br />


<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" placeholder="Masukan Judul" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" placeholder="Masukan Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CreateDate" class="control-label"></label>
                <input asp-for="CreateDate" class="form-control" />
                <span asp-validation-for="CreateDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input type="file" name="fotonya" accept=".jpg,.png" multiple class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label asp-for="Status" class="form-check-label">
                    <input class="form-check-input" asp-for="Status" /> @Html.DisplayNameFor(Model => Model.Status)
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <input asp-controller="Blog" asp-action="Index" type="submit" value="Cancel" class="btn btn-primary float-xl-right" />
            </div>
        </form>
    </div>
</div>